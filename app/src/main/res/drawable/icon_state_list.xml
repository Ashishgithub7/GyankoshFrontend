<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- When focused, use the primary color -->
    <item android:state_focused="true">
        <shape android:shape="@drawable/user_solid">
            <solid android:color="@color/primary" /> <!-- Change this to your primary color -->
        </shape>
    </item>
    <!-- Default color -->
    <item>
        <shape android:shape="@drawable/user_solid">
            <solid android:color="@color/black" /> <!-- Change this to the default color -->
        </shape>
    </item>

</selector>